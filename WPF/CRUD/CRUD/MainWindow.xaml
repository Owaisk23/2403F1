<Window x:Class="CRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-21,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="21" Margin="32,61,0,0" TextWrapping="Wrap" Text="Product Name   " VerticalAlignment="Top" Width="165"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="21" Margin="32,96,0,0" TextWrapping="Wrap" Text="Product Description" VerticalAlignment="Top" Width="165"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="21" Margin="32,132,0,0" TextWrapping="Wrap" Text="Product Quantity" VerticalAlignment="Top" Width="165"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="21" Margin="32,168,0,0" TextWrapping="Wrap" Text="Product Price" VerticalAlignment="Top" Width="165"/>
        <Button Content="Add Product" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="31" Margin="72,220,0,0" VerticalAlignment="Top" Width="98"/>
        <TextBlock Grid.Column="1" Background="LightCoral" HorizontalAlignment="Left" Height="36" Margin="173,23,0,0" TextWrapping="Wrap" Text="IMTIAZ SUPER STORE" VerticalAlignment="Top" Width="302" TextDecorations="Underline" FontWeight="Bold" FontSize="28"/>
        <DataGrid Grid.Column="1" HorizontalAlignment="Left" Height="154" Margin="122,82,0,0" VerticalAlignment="Top" Width="458" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="21" Margin="32,168,0,0" TextWrapping="Wrap" Text="Product Price" VerticalAlignment="Top" Width="165"/>
        <TextBox HorizontalAlignment="Left" Height="21" Margin="122,260,0,0" TextWrapping="Wrap" Text="Product ID" VerticalAlignment="Top" Width="165" Grid.Column="1"/>
        <Button Content="Add Product" HorizontalAlignment="Left" Height="21" Margin="302,260,0,0" VerticalAlignment="Top" Width="98" Grid.Column="1"/>
        <Button Content="Edit Product" HorizontalAlignment="Left" Height="21" Margin="302,260,0,0" VerticalAlignment="Top" Width="98" Grid.Column="1"/>
        <Button Content="Delete Product" HorizontalAlignment="Left" Height="21" Margin="420,260,0,0" VerticalAlignment="Top" Width="98" Grid.Column="1"/>

    </Grid>
</Window>
